<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_name" android:text="@string/lbl_person_name"
            android:textSize="30sp"/>
    <TextView
            android:text="@string/lbl_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/tv_phone" android:textSize="18sp"/>
</LinearLayout>